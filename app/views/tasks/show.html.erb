<div id="container">
  <h1><%= @task.title %></h1>
  <p class="details"><%= @task.details %></p>
  <%= link_to 'Edit task', edit_path(@task) %>
  <%= link_to "Delete", task_path(@task),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
  <%= link_to 'Back to list', tasks_path %>
</div>

